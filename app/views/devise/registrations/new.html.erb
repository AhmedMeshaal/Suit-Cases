<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group flex-start">
    
  <div class="col-md-2 ">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control input-md' ,autocomplete: "email", placeholder: 'ENTER A EMAIL' %>
  </div>
  

  <div class="col-md-2 ">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control input-md' ,autocomplete: "new-password", placeholder: 'ENTER A PASSWORD' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    </div>

  <div class="col-md-2 ">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: 'form-control input-md' ,autocomplete: "new-password", placeholder: 'RE-PASSWORD' %>
  </div>

  <div class="col-md-2 ">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control input-md', placeholder: 'ENTER YOUR NAME' %>
  </div>
  
  <div class="col-md-2 ">
  <%= f.label :image %><br>
  <%= f.text_field :image, class: 'form-control input-md', placeholder: 'ENTER YOUR IMAGE LINK' %>
</div>

  </div>
  
  <div class="flex-end">
    
  <div class="col-md-6 bio">
    <%= f.label :Bio %><br>
    <%= f.text_area :bio, class: 'form-control input-md' %>
    </div>

    <label>Please, determine your role:</label>
    <div class="radios">
    <%= f.radio_button :role, "lawyer" %> 
    <%= label :role, 'Lawyer' %>
    <%= f.radio_button :role, "client" %>
    <%= label :role, 'Client' %>
    </div>
 </div>
  

 


  

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>
  </div>

  
<% end %>

<%= render "devise/shared/links" %>
